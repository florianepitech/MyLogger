<?xml version="1.0" encoding="UTF-8" ?>
<loggers>
    <logger>
        <configuration>
            <name>CANDIBOT</name>
            <package>fr.florian.tracex</package>
            <version>2.0</version>
        </configuration>
        <appenders>
            <console>
                <format>{line} ({trace}) [{name}] [{type}] {date} : {message}</format>
                <colored>true</colored>
                <priority>ALL</priority>
            </console>
            <mongodb>
                <url></url>
                <database></database>
                <collection></collection>
            </mongodb>
            <file>
                <name>TRACEX</name>
                <format>{line} ({trace}) [{name}] [{type}] {date} : {message}</format>
                <line>1</line>
            </file>
        </appenders>
    </logger>
</loggers>